@model Website.Models.ModelVM.ProjectVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<h1>Project</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Image" class="control-label">Project Image</label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="videourl" class="control-label">Project Url</label>
                <input asp-for="videourl" class="form-control" />
                <span asp-validation-for="videourl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectTitle" class="control-label">Project Name</label>
                <input asp-for="ProjectTitle" class="form-control" />
                <span asp-validation-for="ProjectTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectDescription" class="control-label">Project Description</label>
                <textarea asp-for="ProjectDescription" class="form-control" ></textarea>
                <span asp-validation-for="ProjectDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="control-label">Source Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TechnoId" class="control-label">Select Service</label>
                <select asp-for="TechnoId" class ="form-control" asp-items="ViewBag.TechnoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Project" class="btn" style="background-color:#FF6F61;" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-info">Back</a>
</div>

