@model Website.Models.Course

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}


<div>
    
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dd class = "col-sm-10">
            <img src="~/image/Courses/@Html.DisplayFor(model => model.Image)"  width="250px" height="250px" />
        </dd>
        
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
       
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="text-info" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index" class="text-info" >Back</a>
</div>
