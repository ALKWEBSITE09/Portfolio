@model IEnumerable<Website.Models.Course>

@{
    ViewData["Title"] = "Course";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .Butt {
        border-radius: 5px;
        box-shadow: 0px 24px 36px -11px rgba(0, 0, 0, 0.09);
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
        background-color: black;
    }

    .btn-outline-secondaryr {
        color: white;
        border-color: dfa531;
    }
</style>

<section class="ftco-section" id="blog-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <h1 class="big big-2">Cources</h1>
                <h2 class="mb-4">Our Cources</h2>
                <p>Contact to get access to the course. I have completed all the courses given in this.</p>
            </div>
        </div>

        <div style="margin-bottom:2em;" >
            <form class="row justify-content-end" asp-action="Course" enctype="multipart/form-data">
                <input class="col-3" style="border-radius:5px; margin-right:2px;" value="@TempData["cvalue"]" type="search" name="coursesearch" class="form-control" placeholder="Search">
                <button style="margin-right:1em;" class="Butt btn-outline-secondaryr"  type="submit" id="button-addon2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                    </svg>
                </button>
            </form>
        </div>
        @{
            if (Model.Count() == 0)
            {
                <h1 class="row justify-content-center text-danger">Course Not Found</h1>
            }
            else
            {
                <div class="row d-flex">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 d-flex ftco-animate">
                            <div class="blog-entry justify-content-end">
                                <a asp-action="CourseDetail" asp-route-id="@item.Id" class="block-20">
                                    <img src="~/Image/Courses/@Html.DisplayFor(modelItem => item.Image)" class="col-12" />
                                </a>
                                <div class="text float-right d-block" style="padding-left:1em;padding-right:1em;">
                                    <div class="d-flex align-items-center mb-3 meta">
                                        <p class="mb-0">
                                            <span class="mr-2">@Html.DisplayFor(modelItem => item.Date)</span>
                                            <a asp-action="CourseDetail" asp-route-id="@item.Id" class="mr-2">@Html.DisplayFor(modelItem => item.Name)</a>
                                        </p>
                                    </div>
                                    <h3 class="heading"><a asp-action="CourseDetail" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Title)</a></h3>


                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
         }
            
    </div>
</section>
