@model Website.Models.Profile


<section class="ftco-about img ftco-section ftco-no-pb" id="about-section">
    <div class="container">
        <div class="row d-flex">
            <div class="col-md-6 col-lg-5 d-flex">
                <div class="img-about img d-flex align-items-stretch">
                    <div class="overlay"></div>
                    <div class="img d-flex align-self-stretch align-items-center" >
                        <img src="~/Image/Profile/@Html.DisplayFor(model => model.aboutphoto)" class="img" />
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-7 pl-lg-5 pb-5">
                <div class="row justify-content-start pb-3">
                    <div class="col-md-12 heading-section ftco-animate">
                        <h1 class="big">About</h1>
                        <h2 class="mb-4">About Me</h2>
                        <p>@Html.DisplayFor(model => model.ProfileDesc)</p>
                        <ul class="about-info mt-4 px-md-0 px-2">
                            <li class="d-flex"><span>Name:</span> <span>Alpesh Lakshman Khandekar</span></li>
                            <li class="d-flex"><span>Date of birth:</span> <span>April 09, 2003</span></li>
                            <li class="d-flex"><span>Address:</span> <span>@Html.DisplayFor(model => model.Address)</span></li>
                            <li class="d-flex"><span>Zip code:</span> <span>@Html.DisplayFor(model => model.zipcode)</span></li>
                            <li class="d-flex"><span>Email:</span> <span>@Html.DisplayFor(model => model.Email)</span></li>
                            <li class="d-flex"><span>Phone: </span> <span>+91 @Html.DisplayFor(model => model.Phone)</span></li>
                        </ul>
                    </div>
                </div>
                <div class="counter-wrap ftco-animate d-flex mt-md-3">
                    <div class="text">
                        <p class="mb-4">
                            <span class="number" data-number="@TempData["about"]">0</span>
                            <span>Project complete</span>
                        </p>
                        <p><a target="_blank" href="@TempData["Resume"]" class="btn btn-primary py-3 px-3">Download CV</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>